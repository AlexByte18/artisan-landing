  {
    title: "TrainHub",
    tags: ["Serverless", "EdTech"],
    description: "Plataforma para gestión de capacitaciones empresariales (LMS) Tecnologías: PHP, Laravel, Vue.js, Vuex, Bootstrap, MariaDB, AWS S3, SCORM, Go.",
    features: ["Laravel Queues", "Dashboards Analytics", "Integración SCORM"],
  },
  {
    title: "Sistema de Gestión Académica",
    tags: ["Serverless", "EdTech"],
    description: "Plataforma para gestión de capacitaciones empresariales (LMS) Tecnologías: PHP, Laravel, Vue.js, Vuex, Bootstrap, MariaDB, AWS S3, SCORM, Go.",
    features: ["Laravel Queues", "Dashboards Analytics", "Integración SCORM"],
  },
  {
    title: "Plataforma para gestión de ventas y el control de inventario (EPOS)",
